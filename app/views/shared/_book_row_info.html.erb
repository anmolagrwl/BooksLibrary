<tr>
  <td>
    <% if controller_name != 'books' %>
      <%= link_to book.name, book_path(book) %>
    <% else %>
      <%= book.name %>
    <% end %>
  </td>
  <td>
    <%= render 'shared/authors_cell', book: book %>
  </td>
  <td><%= book.volume %></td>
  <td><%= book.year %></td>
  <td><%= book.comment %></td>
</tr>