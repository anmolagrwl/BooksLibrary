<li>
  <%= link_to image_tag('book.png', alt: 'Book'), book_path(book), class: 'book_image' %>

  <span>
    <%= link_to book.name, book_path(book) %><%= ", #{book.year}" unless book.year.to_s.empty? %>.
    <%= "Volume: #{book.volume}." unless book.volume.empty? %>
    <i>
      <%= book.comment %>
    </i>
  </span>
  <% if book.place_id %>
    <%= link_to image_tag('place.png', alt: book.place.name), place_path(book.place), class: 'pull-right' %>
  <% end %>
</li>
