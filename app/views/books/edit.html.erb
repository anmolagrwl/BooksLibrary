<%= provide(:title, 'Edit book') %>
<h1>Editing Book</h1>

<div class="row">
  <div class="span8 offset2">
    <%= form_for(@book) do |f| %>

      <%= render 'shared/error_messages', object: @book %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :volume %>
      <%= f.text_field :volume %>

      <%= f.label :year %>
      <%= f.text_field :year %>

      <%= f.label :comment %>
      <%= f.text_field :comment %>

      <%= f.label :place_id %>
      <%= f.collection_select :place_id, current_user.places, :id, :name, include_blank: 'Please select' %>

      <%= f.submit 'Save changes', class: 'btn btn-large btn-primary' %>
    <% end %>
  </div>
</div>